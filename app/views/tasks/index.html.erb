<% tasks = Task.all %>
<table class=" table table-striped">
  <thead>
    <tr>
      <th data-field="title" data-sortable="true">Task title</th>
      <th data-field="text" data-sortable="true">Details</th>
    </tr>
  </thead>
  <% tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.text %></td>
    </tr>
  <% end %>
</table>
<% if tasks.size == 0 %>
  <em>No tasks found</em>
<% end %>

<%= link_to 'New task', new_task_path %>
